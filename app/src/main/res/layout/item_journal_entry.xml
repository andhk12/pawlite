<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/journal_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_cat"
            android:layout_marginEnd="12dp"
            android:background="@drawable/image_rounded"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/journal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 May 2024"
                android:textSize="12sp"
                android:textColor="#888888"/>

            <TextView
                android:id="@+id/journal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My cat is acting weird"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2F3A60"/>

            <TextView
                android:id="@+id/journal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="He keeps staring at the wall and meowing. I think he's planning something."
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#555555"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>